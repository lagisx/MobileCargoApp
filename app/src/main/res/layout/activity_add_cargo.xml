<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить новый груз"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1f2121"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название товара *"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип ТС"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Вес (т)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Объём (м³)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_from_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Откуда *"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_to_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Куда *"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_loading_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип погрузки"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_loading_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Детали погрузки"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Даты"
            android:inputType="text"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_price_by_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Цена по карте"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_price_with_vat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Цена НДС"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_bargain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Торг/без торга"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_add_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить груз"
            android:textSize="16sp"
            android:padding="12dp"
            android:backgroundTint="#2180a7"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
